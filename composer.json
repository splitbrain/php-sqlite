{
    "name": "splitbrain/php-sqlite",
    "description": "A simple wrapper around pdo-sqlite with basic migration support and a few helper utils",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "splitbrain\\phpsqlite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "splitbrain\\phpsqlite\\tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Andreas Gohr",
            "email": "andi@splitbrain.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    }
}
